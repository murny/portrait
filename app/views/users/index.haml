= form_with model: @user do |f|
  - if @user.errors.any?
    #ErrorModule
      %h2= "#{pluralize @user.errors.count, 'Error'} Prevented This User From Being Created"
      %ol
        - @user.errors.full_messages.each do |error|
          %li= error
  = render f
  %p= f.submit 'Create User'


%table
  %tr
    %th Name
    %th Password
    %th Customer
    %th Sites

  - @users.each do |user|
    %tr
      %td= link_to user.name, user
      %td= user.password
      %td= user.customer.present? ? link_to(user.customer.name, customers_path) : ''
      %td= number_with_delimiter user.sites_count
